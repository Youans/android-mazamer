<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_psalm_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.heaven.mazamer.activities.PsalmViewActivity">

    <TextView

        android:textAlignment="center"
        android:text="ccc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/psalmTextViewHead"
        android:textSize="30dp"
        android:lineSpacingExtra="30dp"
        android:textColor="#621A0B"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"

        />

    <ScrollView
        android:layout_marginTop="50dp"
        android:id="@+id/SCROLLER_ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:scrollbars="none"
        android:fillViewport="true">
        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/psalmTextView"
            android:textSize="22dp"
            android:lineSpacingExtra="15dp"

            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            />

    </ScrollView>




</RelativeLayout>
